#version 330 core

uniform mat4 texRotMatrix;
uniform sampler2D texSampler;
uniform float alphaValue;

in Vertex {
  vec4 color;
  vec2 texCoord;
  vec3 normal;
} IN;

out vec4 fragColor;

void main(void)
{
  vec4 outColor = vec4(IN.color.xyz, abs(sin(alphaValue)) + 0.7);
  vec4 paleTex = vec4(texture(texSampler, IN.texCoord).xyz, 0.3);
  fragColor = outColor * paleTex;
}
