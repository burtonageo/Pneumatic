#version 330 core

uniform sampler2D smileyTex;
uniform sampler2D staticTex;

uniform float time;

in Vertex {
  smooth vec4 color;
  smooth vec2 texCoord;
} IN;

out vec4 fragColor;
ï¿¼void main(void)
{
  vec4 smileyColour = texture(smileyTex, IN.texCoord);

  if (smileyColour.b > 0.1) {
    vec2 tempTex = IN.texCoord;
    tempTex.y += time;
    fragColor = texture(staticTex, tempTex)
  } else {
    fragColor = smileyColour;
  }
}
