#version 330 core

layout(location = 0) in vec3 vertexPosition_modelspace;
layout(location = 1) in vec4 color;
layout(location = 2) in vec2 texCoord;

uniform mat4 MVP;

out Vertex	{
  vec4 color;
  vec2 texCoord;
} OUT;

void main() 
{
  gl_Position = MVP * vec4(vertexPosition_modelspace, 1);
  OUT.color = color;
  OUT.texCoord = texCoord;
}
